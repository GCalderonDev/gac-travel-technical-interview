{% extends 'layout/cms.html.twig' %}

{% block content %}
    <div class="content-page">
        <div class="container">
            <div class="row">
                <div class="container-fluid add-form-list">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <div class="header-title">
                                        <h4 class="card-title">{{ crud_name }}</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ form_start(productForm) }}
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(productForm.name, 'Name') }}
                                                {{ form_widget(productForm.name) }}
                                                {{ form_errors(productForm.name) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(productForm.stock, 'Stock') }}
                                                {{ form_widget(productForm.stock) }}
                                                {{ form_errors(productForm.stock) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(productForm.category, 'Category') }}
                                                {{ form_widget(productForm.category) }}
                                                {{ form_errors(productForm.category) }}
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                                    {{ form_end(productForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}