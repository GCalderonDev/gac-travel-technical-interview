{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Nuevo registro</h2>
                                            {{ form_start(registrationForm) }}
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(registrationForm.username) }}
                                                        {{ form_label(registrationForm.username, 'Username') }}
                                                        {{ form_errors(registrationForm.username) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(registrationForm.plainPassword) }}
                                                        {{ form_label(registrationForm.plainPassword, 'Password') }}
                                                        {{ form_errors(registrationForm.plainPassword) }}
                                                    </div>
                                                </div>
                                            </div>
                                            {{ form_row(registrationForm.agreeTerms) }}

                                            <button type="submit" class="btn btn-primary">Crear cuenta</button>
                                            {{ form_end(registrationForm) }}
                                            <p class="mt-3">
                                                Â¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Accede a Stockify</a>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
