{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Acceder</h2>
                                            <form method="post">
                                                {% if error %}
                                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                                {% endif %}

                                                {% if app.user %}
                                                    <div class="mb-3">
                                                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                                    </div>
                                                {% endif %}
                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input class="floating-input form-control" type="text" name="username" id="username" value="{{ last_username }}">
                                                            <label>Username</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input class="floating-input form-control" type="password" name="password" id="password">
                                                            <label>Password</label>
                                                        </div>
                                                    </div>
                                                    {#
                                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                                    See https://symfony.com/doc/current/security/remember_me.html

                                                    <div class="checkbox mb-3">
                                                        <label>
                                                            <input type="checkbox" name="_remember_me"> Remember me
                                                        </label>
                                                    </div>
                                                    #}
                                                </div>
                                                <button type="submit" class="btn btn-primary">Acceder</button>
                                                <p class="mt-3">
                                                    Crear una cuenta <a href="sign-up.html" class="text-primary">Registrarse</a>
                                                </p>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
