{% extends 'layout/cms.html.twig' %}

{% block content %}
    <div class="content-page">
        <div class="container">
            <div class="row">
                <div class="container-fluid add-form-list">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <div class="header-title">
                                        <h4 class="card-title">{{ crud_name }}</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ form_start(userForm) }}
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(userForm.username, 'Username') }}
                                                {{ form_widget(userForm.username) }}
                                                {{ form_errors(userForm.username) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(userForm.password, 'Password') }}
                                                {{ form_widget(userForm.password) }}
                                                {{ form_errors(userForm.password) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                {{ form_label(userForm.active, 'Status') }}
                                                {{ form_widget(userForm.active) }}
                                                {{ form_errors(userForm.active) }}
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                                    {{ form_end(userForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}