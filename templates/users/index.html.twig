{% extends 'layout/cms.html.twig' %}

{% block content %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                        <div>
                            <h4 class="mb-3">{{ crud_name }}</h4>
                        </div>
                        <a href="{{ create_route }}" class="btn btn-primary add-list">
                            <i class="las la-plus mr-3"></i>Crear
                        </a>
                    </div>
                </div>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="col-lg-12">
                        <div class="badge badge-success custom-flash">{{ flashMessage }}</div>
                    </div>
                {% endfor %}
                <div class="col-lg-12">
                    <div class="table-responsive mb-3">
                        <table class="table mb-0 tbl-server-info no-footer" role="grid">
                            <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data" role="row">
                                <th class="text-left">Username</th>
                                <th class="text-left">Roles</th>
                                <th class="text-center">Active</th>
                                <th class="text-center">Created</th>
                                <th class="text-right">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if users|length > 0 %}
                            {% for user in users %}
                                <tr>
                                    <td class="text-left">{{ user.userIdentifier }}</td>
                                    <td class="text-left">
                                    {% for role in user.roles %}
                                        {{ role }}
                                    {% endfor %}
                                    </td>
                                    <td class="text-center">
                                        {% if user.active == 1 %}
                                            <div class="badge badge-success">Active</div>
                                        {% else %}
                                            <div class="badge badge-danger">Inactive</div>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">{{ user.createdAt|date('d/m/Y') }}</td>
                                    <td class="text-right">
                                        <a class="badge bg-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"
                                           href="{{ path('admin_users_edit', {'user': user.id}) }}">
                                            <i class="ri-pencil-line"></i>
                                        </a>
                                        <a class="badge bg-danger" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"
                                           href="{{ path('admin_users_delete', {'user': user.id}) }}">
                                            <i class="las la-minus"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            {% else %}
                                <div>There is no available users</div>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}